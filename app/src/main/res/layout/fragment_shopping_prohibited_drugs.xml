<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/receipt_prohibited_drugs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:visibility="invisible"
        android:src="@drawable/camera"/>

    <ImageView
        android:id="@+id/prohibited_drugs_camera"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src="@drawable/camera"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/prohibited_drugs_send_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Click the camera to take a picture of your receipt"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/prohibited_drugs_camera"/>

</RelativeLayout>