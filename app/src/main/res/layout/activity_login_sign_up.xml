<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_up_screen">

<RelativeLayout
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_width="match_parent"
    android:layout_height="430dp"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="100dp"
    android:background="#CCd6bd9c"
    android:padding="20dp">
    <TextView
        android:id="@+id/signTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/firstname_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signTV"
        android:text="First Name:"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/firstname_ET"
        android:layout_width="200dp"
        android:layout_below="@id/signTV"
        android:layout_toRightOf="@+id/confirm_password_TV"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lastname_TV"
        android:layout_below="@+id/firstname_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name:"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/lastname_ET"
        android:layout_width="200dp"
        android:layout_toRightOf="@+id/confirm_password_TV"
        android:layout_below="@+id/firstname_ET"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/phone_TV"
        android:layout_below="@+id/lastname_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number:"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/phone_ET"
        android:layout_width="200dp"
        android:layout_toRightOf="@+id/confirm_password_TV"
        android:layout_below="@+id/lastname_ET"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/address_TV"
        android:layout_below="@+id/phone_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/address_ET"
        android:layout_width="200dp"
        android:maxLines="1"
        android:layout_toRightOf="@+id/confirm_password_TV"
        android:layout_below="@+id/phone_ET"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/username_TV"
        android:layout_below="@+id/address_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/usernameET"
        android:layout_width="200dp"
        android:layout_toRightOf="@+id/confirm_password_TV"
        android:layout_below="@+id/address_ET"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/password_TV"
        android:layout_below="@+id/usernameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:textSize="20dp"/>

    <EditText
        android:inputType="textPassword"
        android:id="@+id/password_ET"
        android:layout_width="200dp"
        android:layout_toRightOf="@+id/confirm_password_TV"
        android:layout_below="@+id/usernameET"
        android:layout_height="wrap_content"/>



    <TextView
        android:id="@+id/confirm_password_TV"
        android:layout_below="@+id/password_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password:"
        android:textSize="20dp"/>

    <EditText
        android:inputType="textPassword"
        android:id="@+id/confirm_password_ET"
        android:layout_width="200dp"
        android:layout_toRightOf="@+id/confirm_password_TV"
        android:layout_below="@+id/password_ET"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/confirm_user_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/confirm_password_ET"
        android:text="CREATE USER"/>

</RelativeLayout>




</RelativeLayout>