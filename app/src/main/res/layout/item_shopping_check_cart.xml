<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="200dp"
    android:weightSum="4"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <CheckBox
            android:id="@+id/shopping_cart_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="70dp"/>
        <ImageView
            android:id="@+id/shopping_cart_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/dextrose_icon"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <TextView
            android:id="@+id/shopping_cart_medicine_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:layout_above="@id/shopping_cart_medicine_price"
            android:gravity="center_vertical"
            android:text="LOREM"/>

        <TextView
            android:id="@+id/shopping_cart_medicine_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: 100"
            android:textSize="20dp"
            android:layout_above="@id/shopping_cart_number_picker"/>

        <com.example.pgh_pharmacy_app.HorizontalNumberPicker
            android:id="@+id/shopping_cart_number_picker"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">


        </com.example.pgh_pharmacy_app.HorizontalNumberPicker>


    </RelativeLayout>

</LinearLayout>